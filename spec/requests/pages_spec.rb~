require 'spec_helper'

describe "Pages" do

  describe "Home page" do
    it "should have the content 'Location App'" do
      visit '/pages/home'
      expect(page).to have_content('Location App')
    end
  end

  describe "About app" do
    it "should have the content 'About App'" do
      visit '/pages/about'
      expect(page).to have_content('About App')
    end
  end

end

